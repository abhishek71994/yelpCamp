<% include ../partials/header %>
<% include ../partials/navbar %>
<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to Yelpcamp Campgrounds!</h1>
			<p>View the best campgrounds from all over the world</p>
			<p>
				<a href="/campgrounds/new" class="btn btn-primary btn-lg">Add new campgrounds</a>
			</p>
		</div>
	</header>
	<div class="row">
		<div class="col-lg-12">
			<h3>Our popular sites.</h3>
		</div>
	</div>
	<div class="row" style="display: flex; flex-wrap: wrap;">
		<% campgrounds.forEach(function(campground){ %>
		<div class="col-md-3 col-sm-6 text-center">
			<div class="thumbnail">
				<img src="<%= campground.image %>" alt="image">
			</div>
			<div class="caption text-center">
				<h4><%= campground.name %></h4>
			</div>
			<p>
				<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
			</p>
		</div>

		<% }); %>
	</div>
	

</div>


<% include ../partials/footer %>